{
  "printWidth": 200,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",

  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "auto",

  "jsxSingleQuote": false,
  "jsxBracketSameLine": false,
  
  "proseWrap": "preserve",

  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "singleQuote": false,
        "parser": "json"
      }
    },
    {
      "files": ["*.css", "*.scss", "*.less"],
      "options": {
        "tabWidth": 2,
        "singleQuote": false,
        "parser": "css"
      }
    },
    {
      "files": "*.js",
      "options": {
        "tabWidth": 4,
        "parser": "babel"
      }
    }
  ]
}
